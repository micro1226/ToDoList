
<!--index.wxml-->
<template name="todoListCell">
  <view class="todo-list-cell">
    <icon class="select-button" type="circle" id="{{sid}}" bindtap="cilckCircle"></icon>
    <text class="todo-text"> {{text}} </text>
    <button id="{{sid}}" class="delete-button" bindtap="deleteDemo"> 删除 </button>
  </view>
</template>

<template name="finishedCell">
 <view class="todo-list-cell">
  <icon class="select-button" type="success" color="gray" id="{{sid}}" bindtap="cilckCircle"></icon>
  <text class="todo-text"> {{text}} </text>
  <button id="{{sid}}" class="delete-button" bindtap="deleteDemo"> 删除 </button>
 </view>
</template>

<view class="container">
  <view class="todo-view" wx:for="{{todoList}}">
    <template is="todoListCell" data="{{...item}}" />
  </view>
  <view class="middle-view"> 
    <text class="middle-text"> 已完成 </text>
   </view>
  <view class="todo-view"  wx:for="{{finishedList}}">
    <template is="finishedCell" data="{{...item}}" />
  </view>
  
  <view>
    <input bindinput="inputNewMsg" placeholder="请输入新任务" value="{{inputText}}" />
    <button bindtap="addNewDemo"> 新增 </button>
  </view>
</view>